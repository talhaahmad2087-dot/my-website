    <!-- Header -->
    <header class="gradient-header text-white pt-6 pb-12 px-5 rounded-b-[2.5rem] mb-[-3rem] shadow-lg">
        <div class="flex justify-between items-center mb-4">
            <div>
                <h1 class="text-2xl font-bold tracking-tight">SHER PHARMACY</h1>
                <p class="text-slate-400 text-xs uppercase tracking-widest font-semibold">Digital Ledger</p>
            </div>
            <div class="bg-blue-500 p-2 rounded-xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
            </div>
        </div>
    </header>

    <!-- Stats Cards -->
    <div class="px-5 grid grid-cols-2 gap-3 mb-6">
        <div class="bg-white p-4 rounded-2xl card-shadow border border-slate-100">
            <p class="text-[10px] font-bold text-slate-400 uppercase">Today</p>
            <p class="text-lg font-bold text-slate-800" id="todayTotal">0.00</p>
        </div>
        <div class="bg-white p-4 rounded-2xl card-shadow border border-slate-100">
            <p class="text-[10px] font-bold text-slate-400 uppercase">This Month</p>
            <p class="text-lg font-bold text-slate-800" id="monthTotal">0.00</p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="px-5 space-y-6">
        
        <!-- Entry Form -->
        <section class="bg-white rounded-2xl card-shadow overflow-hidden border border-slate-200">
            <button onclick="toggleForm()" class="w-full p-4 flex justify-between items-center bg-slate-50 border-b border-slate-100">
                <span id="formTitle" class="font-bold text-slate-700 flex items-center gap-2">
                    <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                    New Entry
                </span>
                <svg id="formArrow" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </button>

            <form id="entryForm" class="p-5 space-y-4">
                <input type="hidden" id="editId">
                <div class="grid grid-cols-2 gap-3">
                    <div class="col-span-1">
                        <label class="text-[10px] font-bold text-slate-500 uppercase ml-1">Date</label>
                        <input type="date" id="date" required class="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none text-sm">
                    </div>
                    <div class="col-span-1">
                        <label class="text-[10px] font-bold text-slate-500 uppercase ml-1">Amount</label>
                        <input type="number" step="0.01" id="amount" placeholder="0.00" required class="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none text-sm font-bold">
                    </div>
                </div>

                <div>
                    <label class="text-[10px] font-bold text-slate-500 uppercase ml-1">Customer Name</label>
                    <input type="text" id="name" placeholder="Full name" required class="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none text-sm">
                </div>

                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label class="text-[10px] font-bold text-slate-500 uppercase ml-1">Items/Qty</label>
                        <input type="text" id="rappers" placeholder="Ex: 2 Strips" class="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none text-sm">
                    </div>
                    <div>
                        <label class="text-[10px] font-bold text-slate-500 uppercase ml-1">Phone</label>
                        <input type="tel" id="phone" placeholder="923xxxxxxxxx" class="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none text-sm">
                    </div>
                </div>

                <div>
                    <label class="text-[10px] font-bold text-slate-500 uppercase ml-1">Message</label>
                    <textarea id="wsMsg" rows="2" placeholder="Auto-text for WhatsApp..." class="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-green-500 outline-none text-sm"></textarea>
                </div>

                <div class="flex gap-2 pt-2">
                    <button type="submit" id="submitBtn" class="flex-1 bg-blue-600 text-white font-bold py-3.5 rounded-xl shadow-md active:scale-95 transition-all">
                        Save Transaction
                    </button>
                    <button type="button" id="cancelEdit" class="hidden px-5 bg-slate-200 text-slate-600 font-bold rounded-xl" onclick="resetForm()">
                        âœ•
                    </button>
                </div>
            </form>
        </section>

        <!-- Search with Results Total -->
        <div class="space-y-2">
            <div class="relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" id="searchInput" onkeyup="updateUI()" placeholder="Search customer name..." class="w-full pl-10 pr-4 py-3 bg-white border border-slate-200 rounded-2xl card-shadow focus:ring-2 focus:ring-blue-500 outline-none text-sm">
            </div>
            <div id="searchStats" class="hidden px-2 flex justify-between items-center">
                <span class="text-[10px] font-bold text-blue-600 uppercase tracking-widest">Search Result Total:</span>
                <span id="searchResultSum" class="text-sm font-bold text-slate-700">Rs. 0.00</span>
            </div>
        </div>

        <!-- Recent Transactions -->
        <div class="space-y-3" id="transactionsList">
            <!-- Cards injected by JS -->
        </div>

    </main>

    <!-- Modal Message Box -->
    <div id="msgBox" class="fixed inset-0 bg-slate-900/40 backdrop-blur-sm z-50 hidden flex items-center justify-center p-6">
        <div class="bg-white w-full max-w-sm rounded-3xl p-6 shadow-2xl animate-in fade-in zoom-in duration-200">
            <p id="msgContent" class="text-slate-700 text-center mb-6 font-semibold"></p>
            <div class="flex gap-3">
                <button onclick="closeMsgBox()" class="flex-1 py-3 text-slate-500 text-sm font-bold bg-slate-100 rounded-xl active:scale-95 transition-all">Cancel</button>
                <button id="msgConfirmBtn" class="flex-1 py-3 bg-red-500 text-white text-sm font-bold rounded-xl shadow-lg active:scale-95 transition-all">Confirm</button>
            </div>
        </div>
    </div>

    <script>
        let records = JSON.parse(localStorage.getItem('sher_pharmacy_v3')) || [];
        const form = document.getElementById('entryForm');
        const listContainer = document.getElementById('transactionsList');
        const todayTotalEl = document.getElementById('todayTotal');
        const monthTotalEl = document.getElementById('monthTotal');
        const formArrow = document.getElementById('formArrow');
        const formBody = document.getElementById('entryForm');
        const searchInput = document.getElementById('searchInput');
        const searchStats = document.getElementById('searchStats');
        const searchResultSum = document.getElementById('searchResultSum');
        
        let formVisible = true;
        document.getElementById('date').valueAsDate = new Date();

        function toggleForm() {
            formVisible = !formVisible;
            formBody.classList.toggle('hidden', !formVisible);
            formArrow.style.transform = formVisible ? 'rotate(0deg)' : 'rotate(-90deg)';
        }

        function showMessage(text, confirmAction = null) {
            const box = document.getElementById('msgBox');
            const content = document.getElementById('msgContent');
            const btn = document.getElementById('msgConfirmBtn');
            
            content.innerText = text;
            box.classList.remove('hidden');
            
            if(confirmAction) {
                btn.classList.remove('hidden');
                btn.onclick = () => {
                    confirmAction();
                    closeMsgBox();
                }
            } else {
                btn.classList.add('hidden');
                setTimeout(closeMsgBox, 1500);
            }
        }

        function closeMsgBox() {
            document.getElementById('msgBox').classList.add('hidden');
        }

        function updateUI() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            listContainer.innerHTML = '';
            let dailyTotal = 0;
            let monthlyTotal = 0;
            let searchSum = 0;
            
            const now = new Date();
            const todayStr = now.toISOString().split('T')[0];
            const currentMonth = now.getMonth();
            const currentYear = now.getFullYear();

            // Calculate overall totals
            records.forEach(record => {
                const amount = parseFloat(record.amount) || 0;
                if (record.date === todayStr) dailyTotal += amount;
                const recDate = new Date(record.date);
                if (recDate.getMonth() === currentMonth && recDate.getFullYear() === currentYear) {
                    monthlyTotal += amount;
                }
            });

            // Filter logic
            const filteredRecords = records.filter(r => 
                r.name.toLowerCase().includes(searchTerm) || 
                r.phone.includes(searchTerm)
            );

            // Handle search stats visibility
            if (searchTerm !== "") {
                searchStats.classList.remove('hidden');
                filteredRecords.forEach(r => searchSum += parseFloat(r.amount || 0));
                searchResultSum.innerText = `Rs. ${searchSum.toLocaleString(undefined, {minimumFractionDigits: 2})}`;
            } else {
                searchStats.classList.add('hidden');
            }

            if (filteredRecords.length === 0) {
                listContainer.innerHTML = `
                    <div class="text-center py-10 opacity-40">
                        <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                        <p class="text-sm font-bold">No results found</p>
                    </div>
                `;
            }

            filteredRecords.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach((record) => {
                const card = document.createElement('div');
                card.className = "bg-white p-4 rounded-2xl card-shadow border border-slate-200 flex flex-col space-y-3";
                
                card.innerHTML = `
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-[10px] text-slate-400 font-bold uppercase tracking-tighter">${record.date}</p>
                            <h3 class="font-bold text-slate-800 text-base leading-tight">${record.name}</h3>
                            <p class="text-xs text-slate-500 font-medium">${record.rappers || 'No items listed'}</p>
                        </div>
                        <div class="text-right">
                            <p class="text-lg font-bold text-blue-600">Rs. ${parseFloat(record.amount).toLocaleString()}</p>
                            <p class="text-[10px] text-slate-400 font-bold">${record.phone || 'No phone'}</p>
                        </div>
                    </div>
                    <div class="flex gap-2 pt-1 border-t border-slate-50">
                        <button onclick="sendWhatsApp('${record.phone}', '${encodeURIComponent(record.wsMsg || '')}')" class="flex-[2] bg-emerald-500 text-white py-2 rounded-lg text-xs font-bold flex items-center justify-center gap-1.5 active:scale-95 transition-all shadow-sm">
                            <svg class="w-3.5 h-3.5 fill-current" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
                            WhatsApp
                        </button>
                        <button onclick="editRecord(${record.id})" class="flex-1 bg-slate-100 text-slate-600 py-2 rounded-lg text-xs font-bold active:scale-95 transition-all">Edit</button>
                        <button onclick="deleteRecord(${record.id})" class="flex-1 bg-red-50 text-red-500 py-2 rounded-lg text-xs font-bold active:scale-95 transition-all">Del</button>
                    </div>
                `;
                listContainer.appendChild(card);
            });

            todayTotalEl.innerText = dailyTotal.toFixed(2);
            monthTotalEl.innerText = monthlyTotal.toFixed(2);
            localStorage.setItem('sher_pharmacy_v3', JSON.stringify(records));
        }

        form.onsubmit = (e) => {
            e.preventDefault();
            const recordData = {
                date: document.getElementById('date').value,
                name: document.getElementById('name').value,
                rappers: document.getElementById('rappers').value,
                phone: document.getElementById('phone').value.replace(/\D/g,''),
                amount: document.getElementById('amount').value,
                wsMsg: document.getElementById('wsMsg').value
            };

            const editId = document.getElementById('editId').value;
            if (editId) {
                const idx = records.findIndex(r => r.id == editId);
                records[idx] = { ...records[idx], ...recordData };
                showMessage("Record updated successfully!");
            } else {
                records.push({ id: Date.now(), ...recordData });
                showMessage("Transaction saved!");
            }
            resetForm();
            updateUI();
            if(!editId) toggleForm();
        };

        function sendWhatsApp(phone, msg) {
            if(!phone) { showMessage("Enter phone number first!"); return; }
            window.open(`https://wa.me/${phone}?text=${msg}`, '_blank');
        }

        function editRecord(id) {
            const r = records.find(r => r.id === id);
            document.getElementById('editId').value = r.id;
            document.getElementById('date').value = r.date;
            document.getElementById('name').value = r.name;
            document.getElementById('rappers').value = r.rappers;
            document.getElementById('phone').value = r.phone;
            document.getElementById('amount').value = r.amount;
            document.getElementById('wsMsg').value = r.wsMsg || "";
            
            document.getElementById('submitBtn').innerText = "Update Now";
            document.getElementById('cancelEdit').classList.remove('hidden');
            document.getElementById('formTitle').innerHTML = '<span class="w-2 h-2 bg-amber-400 rounded-full"></span> Editing Record';
            
            if(!formVisible) toggleForm();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function resetForm() {
            form.reset();
            document.getElementById('editId').value = "";
            document.getElementById('date').valueAsDate = new Date();
            document.getElementById('submitBtn').innerText = "Save Transaction";
            document.getElementById('cancelEdit').classList.add('hidden');
            document.getElementById('formTitle').innerHTML = '<span class="w-2 h-2 bg-blue-500 rounded-full"></span> New Entry';
        }

        function deleteRecord(id) {
            showMessage("Delete this transaction forever?", () => {
                records = records.filter(r => r.id !== id);
                updateUI();
            });
        }

        updateUI();
    </script>
</body>
</html>
